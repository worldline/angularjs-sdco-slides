extends ../layout
block append content

  div(class="row" id="updatable-progress-bar")
    div(class="col-sm-11"  )
      updatable-progress-bar(
        the-array="slides"
        tooltip-field="'url'"
        current-index="currentIndex"
      )
  a(move-slide left="true" class="left-link" current-index='currentIndex')
  a(move-slide right="true" class="right-link" current-index='currentIndex')
  div(
    ng-view 
    ng-class="slideClasses" 
    class="view-content" 
    id="theView"
  )
